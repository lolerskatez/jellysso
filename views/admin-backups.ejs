<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="description" content="Backups - Jellyfin Companion Admin">
  <title>Backups - Jellyfin Companion</title>
  <link rel="stylesheet" href="/css/theme.css">
  <link rel="stylesheet" href="/css/layout.css">
  <link rel="stylesheet" href="/css/fontawesome.css">
  <style>
    .sidebar-header h2 {
      display: flex;
      align-items: center;
      gap: var(--spacing-md);
    }

    .sidebar-header h2 i {
      color: var(--primary);
      font-size: 1.5rem;
    }

    .page-section {
      margin-bottom: var(--spacing-xl);
    }

    .page-section-title {
      font-size: 1.25rem;
      font-weight: 600;
      margin-bottom: var(--spacing-lg);
      display: flex;
      align-items: center;
      gap: var(--spacing-md);
      padding-bottom: var(--spacing-md);
      border-bottom: 2px solid var(--border-color);
    }

    .page-section-title i {
      color: var(--primary);
      font-size: 1.5rem;
    }

    .backup-item {
      background: white;
      border-radius: var(--border-radius);
      padding: var(--spacing-lg);
      border: 1px solid var(--border-color);
      box-shadow: var(--shadow-sm);
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: var(--spacing-md);
    }

    .backup-info {
      flex: 1;
    }

    .backup-name {
      font-weight: 600;
      color: var(--text-primary);
      margin-bottom: var(--spacing-xs);
    }

    .backup-details {
      font-size: 0.875rem;
      color: var(--text-secondary);
    }

    .backup-actions {
      display: flex;
      gap: var(--spacing-sm);
    }
  </style>
</head>
<body>
  <div class="app-container">
    <%- include('partials/navigation', { user, currentPage: 'admin-backups' }) %>

    <!-- Main Content -->
    <main class="main-content">
      <!-- Header -->
      <header class="header">
        <div class="header-left">
          <button class="mobile-menu-toggle" id="mobileMenuToggle" aria-label="Toggle menu">
            <i class="fas fa-bars"></i>
          </button>
          <h1 class="header-title">Backups</h1>
        </div>
        <div class="header-right">
          <% if (typeof user !== 'undefined' && user) { %>
            <div class="user-info">
              <div class="user-avatar">
                <%= user.Name.charAt(0).toUpperCase() %>
              </div>
              <div>
                <div style="font-weight: 600; font-size: 0.9375rem;"><%= user.Name %></div>
                <div style="font-size: 0.8125rem; color: var(--text-secondary);">
                  üõ°Ô∏è Administrator
                </div>
              </div>
            </div>
          <% } %>
        </div>
      </header>

      <!-- Page Content -->
      <div class="page-content">
        <% if (typeof user !== 'undefined' && user && user.Policy?.IsAdministrator) { %>
          <!-- Backups Section -->
          <div class="page-section">
            <h3 class="page-section-title">
              <i class="fas fa-database"></i>
              System Backups
            </h3>
            <div style="background: white; border-radius: var(--border-radius); padding: var(--spacing-lg); border: 1px solid var(--border-color); box-shadow: var(--shadow-sm);">
              <p style="color: var(--text-secondary); margin-top: 0;">
                Create, manage, and restore system backups. Regular backups help protect your data against unexpected issues.
              </p>
              <button id="createBackupBtn" class="btn btn-primary" style="margin-top: var(--spacing-lg);">
                <i class="fas fa-plus"></i>
                Create Backup
              </button>
              <div id="backupsList" style="margin-top: var(--spacing-lg);">
                <!-- Backups will be loaded here -->
                <p style="color: var(--text-secondary);">Loading backups...</p>
              </div>
            </div>
          </div>

        <% } else { %>
          <!-- Not Authorized -->
          <div class="empty-state" style="padding: 4rem 2rem;">
            <div class="empty-state-icon">
              <i class="fas fa-lock"></i>
            </div>
            <h2 class="empty-state-title">Access Denied</h2>
            <p class="empty-state-text">
              You do not have permission to access the admin backups. Please contact an administrator.
            </p>
            <a href="/" class="btn btn-primary btn-lg">
              <i class="fas fa-home"></i>
              Back to Dashboard
            </a>
          </div>
        <% } %>
      </div>
    </main>
  </div>

  <script src="/js/mobile-nav.js"></script>
  <script src="/js/admin-backups.js"></script>
</body>
</html>
