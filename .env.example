# JellySSO Configuration Template
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=3000
HTTPS_PORT=3443
NODE_ENV=development
USE_HTTPS=false

# Jellyfin Configuration
JELLYFIN_BASE_URL=http://localhost:8096
JELLYFIN_API_KEY=your_jellyfin_api_key_here

# Session & Security
SESSION_SECRET=your-secure-session-secret-here
SHARED_SECRET=plugin-shared-secret-here

# OIDC Configuration (Optional)
OIDC_ISSUER=http://localhost:3000
OIDC_CLIENT_ID=jellyfin-companion
OIDC_CLIENT_SECRET=your-oidc-client-secret-here

# JWT Configuration (Optional)
JWT_SECRET=your-jwt-secret-here

# External OIDC Clients (Optional)
# Format: JSON array of client configurations
EXTERNAL_OIDC_CLIENTS=[]

# Database Configuration (Optional)
# DATABASE_URL=sqlite:///./src/config/companion.db

# Logging
LOG_LEVEL=info

# Feature Flags
ENABLE_HTTPS=false
ENABLE_AUDIT_LOGGING=true
